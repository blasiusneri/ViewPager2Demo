<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <CheckBox
        android:id="@+id/cb_item_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_item_a"
        app:layout_constraintTop_toTopOf="@+id/tv_item_a"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_item_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Dummy Text"
        app:layout_constraintStart_toEndOf="@+id/iv_item_a"
        app:layout_constraintTop_toTopOf="@+id/iv_item_a" />

</androidx.constraintlayout.widget.ConstraintLayout>